<!DOCTYPE html>
<html>
<head>
  <title>SQLite Database</title>
  <script src="https://kit.fontawesome.com/d5d2ab0e69.js" crossorigin="anonymous"></script>
  <link href="/css/styles.css" rel="stylesheet" type="text/css">
</head>
<body">
  <div class="container">
    <h1 class="mt-5">SQLite Database</h1>

    <table class="table mt-4">
      <thead>
        <tr>
          <th>
            <a class="text-primary" href="/?sortby=id">ID</a>
          </th>
          <th>
            <a class="text-primary" href="/?sortby=name">Name</a>
          </th>
          <th class="col-actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (data && data.length > 0) { %>
          <% data.forEach((row) => { %>
          <tr>
            <td><%= row.id %></td>
            <td class="col-content"><%= row.name %></td>
            <td class="col-actions">
              <a href="/data/<%= row.id %>/edit" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-pen-to-square"></i></a>
              <form method="POST" action="/data/<%= row.id %>?_method=DELETE" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
              </form>
            </td>
          </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="3"><i class="fa-regular fa-folder-open"></i> No data available. Add an entry using the form below.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <form method="POST" action="/data" enctype="application/x-www-form-urlencoded" class="mt-4">
      <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Add entry">
        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i></button>
      </div>
    </form>
  </div>


</body>
</html>
